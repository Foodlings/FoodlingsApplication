<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sheharyararif.foodlings">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.coderefer.androidsplashscreenexample.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".RegistrationScreen" />
        <activity
            android:name=".RestaurantRegistrationScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SubscriberRegistrationScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".PictureUploadScreen" />
        <activity
            android:name=".DashboardScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".PortalScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".VisitorDashboard" />
        <activity
            android:name=".SettingsScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".AdvanceSearchScreen" />
        <activity android:name=".CategoryScreen" />
        <activity android:name=".CommunityScreen" />
        <activity android:name=".SubscriberProfileScreen" />
        <activity android:name=".RestaurantProfile"></activity>
    </application>

</manifest>