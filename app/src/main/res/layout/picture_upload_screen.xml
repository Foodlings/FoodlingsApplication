<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picture_upload_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sheharyararif.foodlings.PictureUploadScreen">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp">

            <ImageButton
                android:id="@+id/ProfilePictureUpload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/ProfilePictureLabel"
                android:layout_below="@id/ProfilePictureUpload"
                android:text="Profile Picture"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/CoverPhotoUpload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/CoverPhotoLabel"
                android:layout_below="@id/CoverPhotoUpload"
                android:text="Cover Photo"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/NextButton"
                android:layout_below="@id/CoverPhotoLabel"
                android:text="Next"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
