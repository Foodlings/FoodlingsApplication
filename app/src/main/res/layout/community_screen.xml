<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/community_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffbb33"
    tools:context="com.example.sheharyararif.foodlings.CommunityScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/LogoImageLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="230dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo_black"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/CommunityLabelLayout"
            android:layout_below="@+id/LogoImageLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:text="Community"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="40dp"
                android:textColor="#ffffff"
                android:background="@drawable/text_heading_border"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SearchTextBoxLayout"
            android:layout_below="@id/CommunityLabelLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-5dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/SearchTextBox"
                android:hint="Search People"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"/>

            <Button
                android:id="@+id/AdvanceSearchButton"
                android:layout_below="@id/SearchTextBox"
                android:text="Advance Search"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#abafb6"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FirstRowLayout"
            android:layout_below="@id/SearchTextBoxLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SecondRowLayout"
            android:layout_below="@id/FirstRowLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp">

            <View
                android:id="@+id/FakeRelativeView"
                android:layout_width="10dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
