<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sheharyararif.foodlings.RegistrationScreen">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/LogoImage" />

    <View
        android:id="@+id/FakeRelativeView"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <LinearLayout

        android:id="@+id/MainBlock"
        android:layout_below="@id/FakeRelativeView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="-130dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/LegendSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <View
                android:id="@+id/lineLeft"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000" />

            <TextView
                android:id="@+id/EmailText"
                android:text=" Register "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="35sp" />

            <View
                android:id="@+id/lineRight"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:weightSum="2">

            <Button
                android:id="@+id/SubscriberButton"
                android:text="Subscriber"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/RestaurantButton"
                android:text="Restaurant"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
