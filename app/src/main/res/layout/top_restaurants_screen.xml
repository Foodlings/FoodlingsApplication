<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:windowSoftInputMode="adjustPan|adjustResize"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.sheharyararif.foodlings.TopRestaurantsScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:background="#ffffbb33">

        <TextView
            android:id="@+id/TopRestaurantsLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Top Restaurants"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.87"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/TopRestaurantsResultLabel"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <ListView
                android:id="@+id/TopRestaurants_ListView"
                android:layout_below="@+id/TopRestaurantsResultLabel"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>